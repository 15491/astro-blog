---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import type { HTMLTag, Polymorphic } from "astro/types";
import FormattedDate from "@/components/FormattedDate.astro";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
  post: CollectionEntry<"post">;
  withDesc?: boolean;
};

const { as: Tag = "div", post, withDesc = false } = Astro.props;

// 默认封面图片
const defaultCover = "/social-card.png";
const coverImage = post.data.coverImage?.src || defaultCover;
const coverAlt = post.data.coverImage?.alt || `${post.data.title} 封面图片`;
---

<article
  class="group relative overflow-hidden rounded-lg bg-gray-100 p-3 transition-all duration-200 hover:shadow-md dark:bg-gray-800/60 dark:hover:shadow-lg"
>
  <div class="grid gap-4 sm:grid-cols-[150px_1fr] sm:gap-6">
    <!-- 封面图片 -->
    <div class="aspect-video overflow-hidden rounded-md sm:aspect-[4/3]">
      {
        post.data.coverImage ? (
          <Image
            alt={coverAlt}
            class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-[1.02]"
            height={150}
            src={coverImage}
            width={150}
          />
        ) : (
          <div class="flex h-full w-full items-center justify-center bg-white dark:bg-gray-900">
            <div class="text-center text-gray-400 dark:text-gray-500">
              <svg
                class="mx-auto mb-2 h-8 w-8 opacity-60"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="1.5"
                  d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                />
              </svg>
              <p class="text-xs opacity-80">文章</p>
            </div>
          </div>
        )
      }
    </div>

    <!-- 文章信息 -->
    <div class="relative flex min-h-[120px] flex-col justify-center">
      <!-- 草稿标记 - 右上角 -->
      {
        post.data.draft && (
          <div class="absolute -top-2 -right-2 z-10">
            <span class="inline-flex items-center rounded-full border border-red-200 bg-red-50 px-2 py-1 text-xs font-medium text-red-700 dark:border-red-800/30 dark:bg-red-900/20 dark:text-red-400">
              草稿
            </span>
          </div>
        )
      }

      <!-- 标题 - 居中显示 -->
      <div class="flex flex-1 items-center">
        <Tag class="w-full">
          <a
            class="cactus-link hover:text-accent block text-center text-lg font-medium transition-colors duration-200"
            href={`/posts/${post.id}/`}
          >
            {post.data.title}
          </a>
        </Tag>
      </div>

      <!-- 描述 - 如果有的话 -->
      {
        withDesc && (
          <div class="mt-3 text-center">
            <p class="line-clamp-3 text-sm text-gray-600 dark:text-gray-300">
              {post.data.description}
            </p>
          </div>
        )
      }

      <!-- 时间 - 右下角 -->
      <div class="absolute -right-2 -bottom-2">
        <FormattedDate
          class="text-xs text-gray-500 dark:text-gray-400"
          date={post.data.publishDate}
        />
      </div>
    </div>
  </div>
</article>
